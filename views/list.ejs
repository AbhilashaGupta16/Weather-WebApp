  <body class="d-flex h-100 text-center text-white bg-dark">
    
<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
  <header class="mb-auto">
    <div>
      <h3 class="float-md-start mb-0">Weather App</h3>
      <nav class="nav nav-masthead justify-content-center float-md-end">
        <a class="nav-link active" aria-current="page" href="/">Home</a>
      </nav>
    </div>
  </header>

  <main class="px-3">
    <h1><%= cityName %></h1>
    <img style="color: white;" src="<%=imgurl %>" alt="">
    <h2><%= temp %></h2>
    <h4>Min : <%= minTemp %>&deg; Max : <%= maxTemp %>&deg; </h4>
    <h4>Description : <%= main %> -  <%= desc %></h4>
    <h4>Pressure: <%= pres %> Humidity : <%= hum %>  </h4>
    
  </main>

  <footer class="mt-auto text-white-50">
    <p class="text-white">@ SpiderWeb</p>
  </footer>
</div>
  </body>
